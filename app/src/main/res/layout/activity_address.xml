<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E641054c"
    tools:context=".Address">

    <TextView
        android:id="@+id/delivery_address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery Address"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#b3b3ff"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_below="@+id/delivery_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#b3b3ff"/>

            <EditText
                android:id="@+id/address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Write name here"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_layout"
            android:layout_below="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Mobile No."
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#b3b3ff"/>

            <EditText
                android:id="@+id/address_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mobile no. is compulsary"
                android:inputType="number"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_layout"
            android:layout_below="@+id/mobile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Select Area"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#b3b3ff"/>

            <Spinner
                android:id="@+id/spinner_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_below="@+id/area_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#b3b3ff"/>

            <EditText
                android:id="@+id/address_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/city_layout"
            android:layout_below="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#b3b3ff"/>

            <TextView
                android:id="@+id/address_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Jhumri Telaiya (825409)"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/tag_layout"
        android:layout_below="@+id/city_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tag"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#b3b3ff"/>

        <Spinner
            android:id="@+id/spinner_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_on_cake_layout"
        android:layout_below="@+id/tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Name on Cake"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#b3b3ff"/>

        <EditText
            android:id="@+id/address_name_on_cake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/date_of_delivery_layout"
        android:layout_below="@+id/name_on_cake_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Delivery Date"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#b3b3ff"/>

        <Spinner
            android:id="@+id/spinner_delivery_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/location_layout"
        android:layout_below="@+id/date_of_delivery_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="0dp">

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="Suspicious0dp"
            android:text="location"
            android:visibility="invisible"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/selected_delivery_date_layout"
        android:layout_below="@+id/location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        android:layout_marginVertical="0dp">

        <TextView
            android:id="@+id/selected_delivery_date_text"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/selected_tag_layout"
        android:layout_below="@+id/selected_delivery_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="0dp">

        <TextView
            android:id="@+id/selected_tag_text"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selected_area_layout"
        android:layout_below="@+id/location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="0dp">

        <TextView
            android:id="@+id/selected_area_text"
            android:textColor="#ffffff"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/apply_code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selected_area_layout"
        android:background="#ffff99"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/discount_code_text"
            android:layout_width="70pt"
            android:layout_height="wrap_content"
            android:hint="Discount Code" />

        <Button
            android:id="@+id/apply_code_button"
            android:layout_width="25pt"
            android:layout_height="match_parent"
            android:background="#b3b3"
            android:text="Apply"
            />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_go_for_payment"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Go For Payment"
            android:background="#b3b3ff"/>

        <TextView
            android:id="@+id/total_price_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"/>

    </LinearLayout>



</RelativeLayout>